<header class="header-color">
  <!--<div class="header-item">-->
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <p>
          <%= link_to root_path, class: "mx-0 p-3" do %>
            <%= image_tag "logo2.png", alt: "LOGO", class: "logo" %>
          <% end %>
        </p>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <li class="nav-item">
                 <%= link_to "投稿一覧", admin_root_path, class: "btn nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ユーザー一覧", admin_users_path, class: "btn nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "ジャンル一覧", admin_genres_path, class: "btn nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn nav-link ml-2" %>
              </li>
            <% elsif user_signed_in? %>
              <li class="nav-item">
                <%= link_to "投稿一覧", posts_path, class: "btn nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ユーザー一覧", users_path, class: "btn nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "マイページ", user_path(current_user), class: "btn nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "新規投稿", new_post_path, class: "btn nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn nav-link ml-2" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "投稿一覧", posts_path, class: "btn nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ユーザー一覧", users_path, class: "btn nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class: "btn nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: "btn nav-link ml-2" %>
              </li>
              <li class="nav-item">
                <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn nav-link ml-2" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  <!--</div>-->
  <div class="d-flex justify-content-end">
    <%= form_with url: posts_path, method: :get, local: :true do |f| %>
      <div class="input-group">
        <%= f.text_field :keyword, value: keyword, class: "form-control search-control", placeholder: "爬虫類の種類を入力" %>
        <span class="input-group-btn input-group-append">
          <%= f.submit "検索", class: "btn btn-sm btn-info" %>
        </span>
      </div>
    <% end %>
  </div>
</header>