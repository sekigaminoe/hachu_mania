<h2 class="heading">投稿一覧</h2>

<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-3">
        <div class="card mt-4 shadow-lg">
          <%= link_to admin_post_path(post) do %>
            <%= image_tag post.get_post_image, class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <p>投稿日:<%= post.updated_at.strftime("%Y/%m/%d") %></p>
            <p>[ジャンル] <%= post.genre.name %></p>
            <p>
              <%= link_to admin_user_path(post.user), class: "action-link" do %>
                <i class="fa-solid fa-user"></i>
                <%= post.user.name %>
              <% end %>
            </p>
            <p>
              <%= link_to admin_post_path(post), class: "action-link" do %>
                <i class="fa-solid fa-book"></i>
                この投稿の詳細を見る
              <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center mt-5">
    <%= paginate @posts %>
  </div>
</div>