<h2 class="heading">投稿詳細</h2>

<div class="container">
  <div class="row">
    <div class="card card-detail mt-3 shadow-lg">
      <%= link_to post_path(@post) do %>
        <%= image_tag @post.get_post_image, class: "card-img-top" %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-5 px-0">
            <p>投稿日:<%= @post.updated_at.strftime("%Y/%m/%d") %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-3">
            <p>
              <%= link_to admin_user_path(@post.user) do %>
                <%= image_tag @post.user.get_profile_image, size: '50x50', class: "profile-image" %>
              <% end %>
            </p>
          </div>
          <div class="col-5 px-0">
            <p>
              <%= link_to admin_user_path(@post.user), class: "action-link" do %>
                <i class="fa-solid fa-user"></i>
                <%= @post.user.name %>
              <% end %>
            </p>
          </div>
        </div>
        <div>
          <p>[ジャンル] <%= @post.genre.name %></p>
          <p class="card-title">[タイトル] <%= @post.title %></p>
          <p><%= @post.body %></p>
        </div>
      </div>
    </div>
    <div class="col-sm-6 mb-3 mb-sm-0 ml-5">
      <h5 class="mt-3">＜コメント＞</h5>
      <table class="mt-3">
        <tbody>
          <%= render "admin/post_comments/index", post: @post %>
        </tbody>
      </table>
    </div>
  </div>
</div>