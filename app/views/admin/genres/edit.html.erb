<h2>ジャンル編集</h2>

<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
        <div class="mr-5 d-inline-block">ジャンル名</div>
        <div class="mr-5 d-inline-block"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>