<h2 class="heading ml-5">ジャンル一覧・追加</h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-5 mt-3">
      <%= render "admin/genres/form", genre: @genre %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-5 mt-5">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>