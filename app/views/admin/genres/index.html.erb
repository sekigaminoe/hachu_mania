<h2>ジャンル一覧・追加</h2>

<div class="container">
  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <div class="field">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, class: "form-control genre_name" %>
      </div>

      <div class="field">
        <%= f.submit "登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>