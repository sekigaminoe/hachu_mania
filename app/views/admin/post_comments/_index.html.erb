<% post.post_comments.each do |post_comment| %>
  <tr>
    <td>
      <%= link_to admin_user_path(post_comment.user), class: "action-link comment-user-name" do %>
        <%= image_tag post_comment.user.get_profile_image, class: "profile-image-design profile-image mr-3" %><br>
        <%= post_comment.user.name %>
      <% end %>
    </td>
    <td><%= post_comment.comment %></td>
    <td class="post_comment_date">投稿日:<%= post_comment.created_at.strftime("%m/%d") %></td>
    <td>
      <%= link_to "削除", admin_post_post_comment_path(post, post_comment), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-sm btn-danger ml-3" %>
    </td>
  </tr>
<% end %>