<h2 class="taitle">新規登録</h2>

<div class="container">
  <div class="row">

    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label "ユーザー名" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "令和道子" %>
      </div>

      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>

      <div class="field">
        <%= f.label "パスワード(6文字以上)" %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label "パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  
  <h5><strong>既に登録済みの方</strong>は<%= render "public/shared/links" %>からログインしてください。</h5>
  
</div>

