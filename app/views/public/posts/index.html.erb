<h2 class="heading">投稿一覧</h2>

<h3 class="ml-5 mt-3">
  <% if @keyword.present? %>
    <%= "「#{@keyword}」の検索結果" %>
  <% end %>
</h3>

<div class="container">
  <div class="row">
    <%= render "public/posts/index", posts: @posts %>
  </div>
  <div class="row justify-content-center mt-5">
    <%= paginate @posts %>
  </div>
</div>