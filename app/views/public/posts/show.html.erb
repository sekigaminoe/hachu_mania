<h2>投稿詳細</h2>

<div class="container">
  <div class="row">
    <p><%= image_tag @post.get_post_image(500, 500) %></p>
    <p>投稿日:<%= @post.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
    <p><%= image_tag @post.user.get_profile_image, size: '100x100' %></p>
    <p><%= link_to @post.user.name, user_path(@post.user) %></p>
    <% if @post.user.id == current_user.id %>
      <p><%= link_to " 編集", edit_post_path(@post) %></p>
      <p><%= link_to "削除", user_path(@post.user), method: :delete, data: {confirm: "削除しますか？"} %></p>
    <% end %>
    <p>ジャンル:<%= @post.genre.name %></p>
    <p><%= @post.title %></p>
    <p><%= @post.body %></p>
  </div>
</div>