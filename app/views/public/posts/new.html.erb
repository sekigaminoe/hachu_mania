<h2 class="heading">新規投稿</h2>

<div class="container">
  <div class="row justify-content-center">
    <%= form_with model: @post do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>
            <strong><%= f.label :タイトル %></strong><br>
            <%= f.text_field :title, class: "form-control post_title", size: "40" %>
          </td>
        </tr>

        <tr>
          <td>
            <strong><%= f.label :本文 %></strong><br>
            <%= f.text_area :body, class: "form-control post-body", size: "40x5" %>
          </td>
        </tr>

        <tr>
          <td>
            <strong><%= f.label :投稿写真 %></strong><br>
            <%= f.file_field :post_image, accept: "image/*" %>
          </td>
        </tr>

        <tr>
          <td>
            <strong><%= f.label :ジャンル %></strong>
            <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "--選択して下さい--" %>
          </td>
        </tr>

        <tr>
          <td>
            <%= f.submit "投稿", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>
