<h2>ログイン</h2>

<div class="container">
  <div class="row">

    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>

      <div class="field">
        <%= f.label "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>

  <h5><strong>登録がお済みでない方</strong>は<%= render "public/shared/links" %>から登録してください。</h5>

</div>
