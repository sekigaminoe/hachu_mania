<h2 class="heading">ログイン</h2>

<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <%= form_with model: @user, url: user_session_path do |f| %>
        <table class="table table-borderless">
          <tr>
            <td>
              <strong><%= f.label :メールアドレス %></strong><br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
            </td>
          </tr>

          <tr>
            <td>
              <strong><%= f.label :パスワード %></strong><br>
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
            </td>
          </tr>

          <tr>
            <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>

<h5 class="info-text mt-5"><strong>登録がお済みでない方</strong>は<%= render "public/shared/links" %>から登録してください。</h5>
