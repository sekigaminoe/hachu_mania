<h2>登録情報編集</h2>

<div class="container">
  <div class="row">
    <%= form_with model: @user do |f| %>
      <div class="field">
        <%= f.label :ユーザー名 %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :自己紹介 %>
        <%= f.text_area :introduction %>
      </div>

      <div class="field">
        <%= f.label :プロフィール画像 %>
        <%= f.file_field :profile_image %>
      </div>

      <div class="field">
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      </div>
    <% end %>
    <%= link_to "退会", users_confirm_user_path(current_user.id), class: "btn btn-danger" %>
  </div>
</div>