<h2 class="heading">いいね一覧</h2>

<div class="container">
  <div class="row">
    <table class="table mt-3">
      <thead>
        <tr>
          <th>投稿写真</th>
          <th>タイトル</th>
          <th>ジャンル</th>
          <th>ユーザー名</th>
        </tr>
      </thead>
      <tbody>
        <% @favorite_posts.each do |post| %>
          <tr>
            <td>
              <%= link_to post_path(post)  do %>
                <%= image_tag post.get_post_image, size: "150x100" %>
              <% end %>
            </td>
            <td><%= post.title %></td>
            <td><%= post.genre.name %> </td>
            <td><%= link_to post.user.name, user_path(post.user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>